generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model operadores{
  id Int @id @default(autoincrement())
  nome String
  funcao String?
  email String @unique
  password String

}
model QRCodes{
  idQR Int @id @default(autoincrement())
  dadosQR String @unique
  longitude String @unique
  latitude String @unique
  detalheCode String?
}

model Rota{
  id Int @id @default(autoincrement())
  nome String
  pontos Ponto[] //uma rota tem muitos pontos geogr√°ficos
}

model Ponto{
  id Int @id @default(autoincrement())
  lat Float
  lng Float
  rota Rota @relation(fields: [rotaId], references: [id])
  rotaId Int
}